<Router AppAssembly="@MainLayout.Assembly">
    <Found>
        <RouteView RouteData="context" DefaultLayout="@MainLayout" />
    </Found>
    <NotFound>
        <LayoutView Layout="@MainLayout">
            <NotFoundPage />
        </LayoutView>
    </NotFound>
</Router>

@code {

    private static readonly Type MainLayout = typeof(Layout);

}
