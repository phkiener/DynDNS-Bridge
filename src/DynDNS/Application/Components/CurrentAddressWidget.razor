<MudStack Spacing="0" AlignItems="AlignItems.End">
    @if (currentAddress.IPv4 is not null)
    {
        <MudText Typo="Typo.overline">
            <MudTooltip Inline Placement="Placement.Start">
                <ChildContent>
                    <MudIconButton Icon="@Icons.Material.Rounded.ContentCopy" Size="Size.Small" OnClick="@(_ => CopyToClipboard(currentAddress.IPv4))"/>
                </ChildContent>
                <TooltipContent>
                    Copy to clipboard
                </TooltipContent>
            </MudTooltip>
            
            IPv4: @currentAddress.IPv4 
        </MudText>
    }
    
    @if (currentAddress.IPv4 is not null && currentAddress.IPv6 is not null)
    {
        <MudDivider/>
    }
    
    @if (currentAddress.IPv6 is not null)
    {
        <MudText Typo="Typo.overline">
            <MudTooltip Inline Placement="Placement.Start">
                <ChildContent>
                    <MudIconButton Icon="@Icons.Material.Rounded.ContentCopy" Size="Size.Small" OnClick="@(_ => CopyToClipboard(currentAddress.IPv6))"/>
                </ChildContent>
                <TooltipContent>
                    Copy to clipboard
                </TooltipContent>
            </MudTooltip>
            
            IPv6: @currentAddress.IPv6
        </MudText>
    }
</MudStack>
